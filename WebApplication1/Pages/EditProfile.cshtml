@page
@model WebApplication1.Pages.EditProfileModel
@{
    ViewData["Title"] = "Редактирование профиля";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Редактирование профиля</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="UpdateData.Surname" class="form-label">Фамилия</label>
                                <input asp-for="UpdateData.Surname" class="form-control" />
                                <span asp-validation-for="UpdateData.Surname" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="UpdateData.Name" class="form-label">Имя</label>
                                <input asp-for="UpdateData.Name" class="form-control" />
                                <span asp-validation-for="UpdateData.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="UpdateData.Patronymic" class="form-label">Отчество</label>
                                <input asp-for="UpdateData.Patronymic" class="form-control" />
                                <span asp-validation-for="UpdateData.Patronymic" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateData.Login" class="form-label">Логин</label>
                            <input asp-for="UpdateData.Login" class="form-control" />
                            <span asp-validation-for="UpdateData.Login" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateData.Password" class="form-label">Пароль</label>
                            <input asp-for="UpdateData.Password" type="password" class="form-control" />
                            <span asp-validation-for="UpdateData.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateData.Email" class="form-label">Email</label>
                            <input asp-for="UpdateData.Email" type="email" class="form-control" />
                            <span asp-validation-for="UpdateData.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateData.NumberPhone" class="form-label">Телефон</label>
                            <input asp-for="UpdateData.NumberPhone" class="form-control" placeholder="+7 (XXX) XXX-XX-XX" />
                            <span asp-validation-for="UpdateData.NumberPhone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateData.TelegramID" class="form-label">Telegram ID</label>
                            <input asp-for="UpdateData.TelegramID" class="form-control" />
                            <span asp-validation-for="UpdateData.TelegramID" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                            <a asp-page="/UserPages" class="btn btn-secondary">Назад к профилю</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}